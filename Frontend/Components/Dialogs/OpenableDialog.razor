@if (!_isOpened)
{
    @Opener(this)
}
else
{
    <div class="modal show" role="dialog" tabindex="-1" style="display: inherit">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    @Title
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true" @onclick="CloseDialog">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @ChildContent(this)
                </div>
            </div>
        </div>
    </div>
}

@code {
    private bool _isOpened = false;

    [Parameter]
    public RenderFragment<OpenableDialog> Opener { get; set; }

    [Parameter]
    public RenderFragment Title { get; set; }

    [Parameter]
    public RenderFragment<OpenableDialog> ChildContent { get; set; }

    public void OpenDialog() => _isOpened = true;
    public void CloseDialog()
    {
        Console.WriteLine("closing dialog");
        _isOpened = false;
    }
}