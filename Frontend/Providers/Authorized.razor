@if (Provider.IsLoggedIn)
{
    @ChildContent
}
else if (ShowNotLoggedInMessage)
{
    @Provider.NotLoggedInDefault
}

@code {

    [CascadingParameter]
    public AuthStateProvider Provider { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public bool ShowNotLoggedInMessage { get; set; } = true;

}